FROM biodepot/bwb:latest
MAINTAINER lhhung<lhhung@uw.edu>

#add config files for dev tools
COPY dev-files/menu /root/.fluxbox/
COPY dev-files/geany/ /root/.config/

RUN apt-get update \
    && apt-get install -y \
        firefox \
        geany \
    && apt-get clean \
    && apt-get autoremove -y --purge \
    && rm -rf /var/lib/apt/lists/*
